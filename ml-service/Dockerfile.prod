FROM pytorch/pytorch:2.8.0-cuda12.6-cudnn9-devel

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    git \
    postgresql-client \
    libpq-dev \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir \
    librosa torchaudio resemble-perth safetensors transformers \
    conformer s3tokenizer diffusers omegaconf

# Install chatterbox from git (no dependencies)
RUN pip install --no-cache-dir git+https://github.com/rsxdalv/chatterbox.git@faster --no-dependencies

# Install additional Python packages
RUN pip install --no-cache-dir \
    python-doctr \
    fastapi uvicorn[standard] python-multipart pydantic \
    celery sqlalchemy psycopg2 \
    marker-pdf \
    supabase \
    pydub \
    gunicorn

# Copy application code
COPY api.py ml_worker.py ./

# Copy production startup script
COPY run.prod.sh ./
RUN chmod +x run.prod.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8001/ || exit 1

# Run the production startup script
CMD ["./run.prod.sh"]
